@model MIT.Data.Departamento

@{
    ViewData["Title"] = "Create";
}

<h4 class="page-header">Departamento - Novo </h4>

<div class="row placeholders">
    <div class="col-md-8 placeholder">
        <form asp-action="Create">
            <div class="form-horizontal">
                            
                <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="departamento" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="departamento" class="form-control" />
                        <span asp-validation-for="departamento" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="descricao" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="descricao" class="form-control" />
                        <span asp-validation-for="descricao" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="empresaId" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <select asp-for="empresaId" asp-items='ViewBag.empresaId' class="form-control" ></select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="responsavelId" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <select asp-for="responsavelId" asp-items='ViewBag.responsavelId' class="form-control" ></select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </form>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
                
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
